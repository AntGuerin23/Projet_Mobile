<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.fragments.ProductDetailFragment">

    <TextView
        android:id="@+id/tvProductName"
        android:layout_width="312dp"
        android:layout_height="33dp"
        android:text="Product Name"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.11" />

    <ImageView
        android:id="@+id/ivProductImage"
        android:layout_width="306dp"
        android:layout_height="257dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/s1_tp1"
        app:layout_constraintEnd_toEndOf="@+id/tvProductName"
        app:layout_constraintHorizontal_bias="0.479"
        app:layout_constraintStart_toStartOf="@+id/tvProductName"
        app:layout_constraintTop_toBottomOf="@+id/tvProductName" />

    <TextView
        android:id="@+id/tvProductDescription"
        android:layout_width="314dp"
        android:layout_height="97dp"
        android:layout_marginTop="24dp"
        android:text="Product description"
        app:layout_constraintEnd_toEndOf="@+id/ivProductImage"
        app:layout_constraintStart_toStartOf="@+id/ivProductImage"
        app:layout_constraintTop_toBottomOf="@+id/ivProductImage" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bDecrement"
        android:layout_width="51dp"
        android:layout_height="49dp"
        android:background="@drawable/bg_button"
        android:textColor="@color/white"
        android:text="-"
        app:layout_constraintBottom_toBottomOf="@+id/etQuantity"
        app:layout_constraintEnd_toStartOf="@+id/etQuantity"
        app:layout_constraintStart_toStartOf="@+id/tvProductDescription"
        app:layout_constraintTop_toTopOf="@+id/etQuantity" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etQuantity"
        android:layout_width="189dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:background="@drawable/custom_edit_text"
        android:hint="Quantity"
        android:inputType="number"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="@+id/tvProductDescription"
        app:layout_constraintStart_toStartOf="@+id/tvProductDescription"
        app:layout_constraintTop_toBottomOf="@+id/tvProductDescription" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bIncrement"
        android:layout_width="51dp"
        android:layout_height="49dp"
        android:background="@drawable/bg_button"
        android:textColor="@color/white"
        android:text="+"
        app:layout_constraintBottom_toBottomOf="@+id/etQuantity"
        app:layout_constraintEnd_toEndOf="@+id/tvProductDescription"
        app:layout_constraintStart_toEndOf="@+id/etQuantity"
        app:layout_constraintTop_toTopOf="@+id/etQuantity" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bAddToCard"
        android:layout_width="301dp"
        android:layout_height="48dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/bg_button"
        android:text="Add to cart"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/bIncrement"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/tvProductDescription"
        app:layout_constraintTop_toBottomOf="@+id/etQuantity" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bBack"
        android:layout_width="51dp"
        android:layout_height="49dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_button"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:drawableStart="@drawable/ic_baseline_arrow_back"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>